{
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'",
  "description": "extract Critical CSS rules for the current page",
  "devtools_page": "devtools.html",
  "manifest_version": 2,
  "name": "Critical CSS Extractor",
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "<all_urls>"
  ],
  "version": "2.6.2"
}
